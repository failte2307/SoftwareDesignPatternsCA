package com.bookstorage.bookstorage;

import java.util.List;
import java.util.stream.Collectors;
import java.util.stream.Stream;

import javax.annotation.PostConstruct;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RestController;

@RestController
public class Controllor {
	
	@Autowired
	private DAO dao;
	
//	@RequestMapping(method =  RequestMethod.GET, produces="application/json", value="/couch")
//	public Iterable<Entity> getAll(){
//		return  dao.findAll();
//	}
	
	@RequestMapping(value = "/get")
	public Iterable<Entity> getAll(){
		return dao.findAll();
	}
	
	@RequestMapping(method = RequestMethod.GET, produces="application/json", value="/couch")
	public void insertTest() {
		dao.saveAll(Stream
				.of(new Entity("7","hi","ho"))
				.collect(Collectors.toList()));
		
	}
	

	@RequestMapping(value = "/addTest")
	public void addTest() {
		Entity bla = new Entity("8","Test","hi");
		dao.save(bla);
		
	}
	
	@RequestMapping(value = "/deleteTest/{id}")
	public void updateTest(@PathVariable("id") String id) {
	    dao.deleteById(id);
	    dao.
	}
	
	@RequestMapping(value = "/addTestNoid")
	public void addTestNoId() {
		Entity bla = new Entity("Test","hi");
		dao.save(bla);
		
	}
	
	
	

}
