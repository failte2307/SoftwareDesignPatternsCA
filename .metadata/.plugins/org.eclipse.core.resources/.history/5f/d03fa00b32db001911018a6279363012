import static org.junit.Assert.*;

import org.junit.Before;
import org.junit.Test;

import com.loan.LongTermLoan;
import com.loan.STL;

public class LongTermLoanBehaviourTest {

	LongTermLoan longTermLoan = new LongTermLoan();

	@Test
	public final void LongTermBehaviourTestShort() {
		assertEquals(0.15,longTermLoan.CalculateInterestOnLoanByTerm(10),0.00);
	}
	
	@Test
	public final void LongTermBehaviourTestLong() {
		assertEquals(0.15,longTermLoan.CalculateInterestOnLoanByTerm(25),0.00);
	}
	
	

}
